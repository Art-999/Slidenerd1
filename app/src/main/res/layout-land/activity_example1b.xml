<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">
    <!--android:background="#f00"-->


    <LinearLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="3"
        android:background="#000"
        android:orientation="horizontal"
        android:padding="15dp">
        <!--android:background="#0f0"-->

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="14" />

        <Button
            android:id="@+id/button1"
            style="@style/gangnamelight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="x" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bigBlueBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="9"
        android:background="#000"
        android:orientation="horizontal">
        <!--android:background="#00f"-->

        <LinearLayout
            android:id="@+id/orangeBox1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#000"
            android:orientation="vertical">
            <!--android:background="#fb0"-->

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="sin" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="cos" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="tan" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="p" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="!" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/orangeBox2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="5"
            android:background="#000"
            android:orientation="vertical">
            <!--android:background="#fe0"-->

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="in" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="log" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="e" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="^" />

            <Button
                style="@style/gangnamestyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21"
            android:background="#000"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/greenBox1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"
                android:orientation="horizontal">
                <!--android:background="#0d0"-->

                <Button
                    style="@style/gangnamelight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    style="@style/gangnamelight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    style="@style/gangnamelight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="9" />

                <Button
                    style="@style/gangnamestyle2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="/" />

                <Button
                    style="@style/gangnamestyle2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="(" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/greenBox2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"
                android:orientation="horizontal">
                <!--android:background="#0a0"-->

                <Button
                    style="@style/gangnamelight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    style="@style/gangnamelight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    style="@style/gangnamelight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="6" />

                <Button
                    style="@style/gangnamestyle2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="*" />

                <Button
                    style="@style/gangnamestyle2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text=")" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blueBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#000"
                android:orientation="horizontal">
                <!--android:background="#00f"-->

                <LinearLayout
                    android:id="@+id/redBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="#f00"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/greenBox3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:orientation="horizontal">
                        <!--android:background="#0f0"-->

                        <Button
                            style="@style/gangnamelight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:text="1" />

                        <Button
                            style="@style/gangnamelight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:text="2" />

                        <Button
                            style="@style/gangnamelight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:text="3" />

                        <Button
                            style="@style/gangnamestyle2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:text="-" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/greenBox4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:orientation="horizontal">
                        <!--android:background="#090"-->

                        <Button
                            style="@style/gangnamelight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="2"
                            android:text="0" />

                        <Button
                            style="@style/gangnamelight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:text=";" />

                        <Button
                            style="@style/gangnamestyle2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:text="+" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    style="@style/gangnamestyle2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="=" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>